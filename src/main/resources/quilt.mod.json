{
  "schema_version": 1,

  "quilt_loader": {
    "group": "${mod_group}",
    "id": "${mod_id}",
    "version": "${mod_version}",

    "intermediate_mappings":"net.fabricmc:intermediary",

    "metadata": {
      "name": "${mod_name}",
      "description": "A Quilt mod that fixes camera clipping.",
      "contributors": {
        "SDFTDusername": "Programmer"
      },

      "contact": {
        "homepage": "https://example.com/",
        "issues": "https://codeberg.org/CRModders/cosmic-quilt-example/issues",
        "sources": "https://codeberg.org/CRModders/cosmic-quilt-example/"
      },

      "icon": "assets/fix_camera_clipping/icon.png"
    },

    "entrypoints": {
      "init": "com.sdftdusername.fix_camera_clipping.FixCameraClippingMod"
    },

    "depends": [
      {
        "id": "cosmicquilt",
        "versions": "*"
      },
      {
        "id": "cosmicreach",
        "versions": "*"
      }
    ]
  },

  "mixin": "fix_camera_clipping.mixins.json"
}
